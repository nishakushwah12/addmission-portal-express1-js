    .logo1 {
      width: 100%;
      height: 600px;
    }

    .register_logo {
      width: 121px;
      height: auto;
      margin: Auto;
    }
  </style>


  <title>Login</title>
</head>

<body>
  <section style="background-color: #12587a;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="images/images (1).jpg" class="logo1">
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 text-black">

                  <div class="d-flex align-items-center pb-1">
                    <img src="/images/logo.png" class="register_logo" width="120px" height="120px" alt="....">
                  </div>
                  <h5 class="text-center regs_heading mb-3 pb-3">Login</h5>

                  <% if(message.length> 0){ %>
                    <div class="alert alert-danger">
                      <%= message %>
                    </div>


                    <% } %>



                      <form action="verifylogin" method="post">

                        <div class="form-group mb-4">
                          <input type="text" name="email" class="form-control form-control-lg" placeholder="Email">
                        </div>
                        <div class="form-group mb-5">
                          <input type="password" name="password" class="form-control form-control-lg"
                            placeholder="Password">
                        </div>
                        <div class="form-group text-center">
                          <button type="submit" class="btn btn-lg btn-block"
                            style="background: #12587a; color:#ffff;width:80%;">Log In</button>
                          <br>
                          <div class="mt-4">
                            <span class=" mb-5 pb-lg-2">DON`T HAVE AN ACCOUNT?</span>
                            <a href="/register" style="color: #393f81;">REGISTER NOW</a>
                       </div>
                          <a href="#" data-bs-toggle="modal" data-bs-target="#Forgot">Forgot
                            Password</a>
                        
                        
                        </div>
                        
                      </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!--Forgot Password -->
  <div class="modal fade" id="Forgot" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Forget Password</h1>

          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form action="/forgot_Password" method="post">


            <div class="mb-3">
              <label for="">Email</label>
              <input type="text" name="email" class="form-control">
            </div>




            <button type="submit" class="btn btn-success">Submit</button>

          </form>
        </div>

      </div>
    </div>
  </div> 
