<%- include('../header.ejs') %>
    <div class="container">
        <br></br>
        <br></br>
        <br></br>

        <h1 class="text-center py-4">Course Edit</h1>
        <form action="/courseUpdate/<%=courseedit.id %>" method="post">
            <div class="mb-3">
              <label>Name:</label>
              <input type="text" name="name"  value="<%= courseedit.name %>" class="form-control">
            </div>
            <div class="mb-3">
              <label>Email:</label>
              <input type="email" name="email" value="<%= courseedit.email %>" class="form-control">
            </div>
            <div class="mb-3">
              <label>Phone:</label>
              <input type="number" name="phone" value="<%= courseedit.phone %>" class="form-control">
            </div>
            <div class="mb-3">
              <label>City:</label>
              <input type="text" name="city" value="<%= courseedit.city %>" class="form-control">
            </div>
            <div class="mb-3">
              <label>Address:</label>
              <input type="text" name="address" value="<%= courseedit.address %>" class="form-control">
            </div>
           

            <div class="mb-3">
              <label>Course:</label>
              <input type="text" name="course" value="<%= courseedit.course %>" class="form-control">
            </div>

            <button class="btn btn-success my-3" type="submit">Update</button>
          </form>
      
    </div>
        <%- include('../footer.ejs') %>